{
  "name": "deep-pack",
  "version": "0.0.1",
  "description": "pack a package and pack it's dependencies",
  "main": "./lib/deep-pack.js",
  "bin": {
    "npm-deep-pack": "./dist/deep-pack.js"
  },
  "scripts": {
    "start": "nodemon src/deep-pack.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "local": "sudo npm i -g && npm-deep-pack",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doradsoft/deep-pack.git"
  },
  "keywords": [
    "npm",
    "pack",
    "package",
    "tgz",
    "tar-tgz"
  ],
  "author": "DoradSoft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/doradsoft/deep-pack/issues"
  },
  "homepage": "https://github.com/doradsoft/deep-pack#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "commander": "^7.0.0",
    "figlet": "^1.5.0",
    "path": "^0.12.7",
    "requirejs": "^2.3.6"
  },
  "devDependencies": {
    "@types/clear": "^0.1.1",
    "@types/figlet": "^1.2.1",
    "@types/node": "^14.14.25",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
